# Database Configuration
DATABASE_URL=postgresql://epiwatch:password@localhost:5432/epiwatch
REDIS_URL=redis://localhost:6379/0

# API Keys
NEWS_API_KEY=your_newsapi_key_here
GDELT_API_KEY=your_gdelt_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Firebase (Mobile Push Notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# External Services
MAPBOX_ACCESS_TOKEN=your_mapbox_token
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# NLP Settings
SPACY_MODEL=en_core_web_sm
DISEASE_CONFIDENCE_THRESHOLD=0.8
LOCATION_CONFIDENCE_THRESHOLD=0.7

# Anomaly Detection
PROPHET_FORECAST_DAYS=14
ANOMALY_THRESHOLD=2.5
MIN_OUTBREAK_SEVERITY=0.6

# Data Retention
DATA_RETENTION_DAYS=365
ALERT_RETENTION_DAYS=90

# Monitoring
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=True